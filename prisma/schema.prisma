
  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "postgresql"
    url = env("POSTGRES_PRISMA_URL") 
    directUrl = env("POSTGRES_URL_NON_POOLING") 
  }

  model User {
    id                    String   @id @default(cuid())
    username              String   @unique
    password              String  
    email                 String
    phone                 String
    name                  String
    gender                String
    bpjs                  String?  // Optional field
    birthDate             DateTime
    address               String
    createdAt             DateTime @default(now())
    updatedAt             DateTime @updatedAt
  }

  model schedule (
    id String @id @default(cuid())
    availability String 
    day String
    time String
  )